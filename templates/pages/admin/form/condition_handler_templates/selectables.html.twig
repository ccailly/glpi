{% if input_type == 'input' %}
    {% include '/pages/admin/form/condition_handler_templates/input.html.twig' with {
        input_value: input_value,
        input_name: input_name,
        input_label: input_label,
        attributes: attributes ?? {}
    } %}
{% elseif input_type == 'dropdown' %}
    {% include '/pages/admin/form/condition_handler_templates/dropdown.html.twig' with {
        input_value: input_value,
        input_name: input_name,
        input_label: input_label,
        values: values ?? []
    } %}
{% elseif input_type == 'dropdown_multiple' %}
    {% include '/pages/admin/form/condition_handler_templates/dropdown_multiple.html.twig' with {
        input_value: input_value,
        input_name: input_name,
        input_label: input_label,
        values: values ?? []
    } %}
{% else %}
    <span class="text-danger">
        {{ "Unsupported input type: %s"|format(input_type) }}
    </span>
{% endif %}
